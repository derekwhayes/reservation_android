<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SelectTimeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Where do you want to sit?"
            style="@style/WaiterText"
            android:textSize="16sp"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/waiter" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How many seats are you requesting?"
            android:layout_below="@id/imageView"
            style="@style/WaiterText"
            android:textSize="16sp"
            android:layout_marginTop="-15dp"
            android:layout_centerHorizontal="true"/>


        <EditText
            android:id="@+id/editText"
            style="@style/WaiterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView2"
            android:layout_alignBaseline="@id/textView2"
            android:layout_alignEnd="@id/textView2"
            android:layout_marginEnd="-20dp"
            android:autofillHints="Num"
            android:inputType="number"
            android:paddingEnd="10dp"
            android:paddingStart="10dp" />

        <GridLayout
                android:id="@+id/time_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:layout_alignTop="@id/editText"
                android:layout_marginTop="40dp">

                <Button
                    android:id="@+id/fri_button"
                    android:text="FRI"
                    android:layout_columnWeight="1"/>
                <Button
                    android:id="@+id/sat_button"
                    android:text="SAT"
                    android:layout_columnWeight="1"/>
                <Button
                    android:id="@+id/sun_button"
                    android:text="SUN"
                    android:layout_columnWeight="1"/>

                <Button
                    android:id="@+id/time1"
                    android:text="4:00 PM"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="3"
                    android:layout_marginTop="10dp"/>
                <Button
                    android:id="@+id/time2"
                    android:text="4:30 PM"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="3"/>
                <Button
                    android:id="@+id/time3"
                    android:text="5:00 PM"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="3"/>
                <Button
                    android:id="@+id/time4"
                    android:text="5:30 PM"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="3"/>
                <Button
                    android:id="@+id/time5"
                    android:text="6:00 PM"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="3"/>
                <Button
                    android:id="@+id/time6"
                    android:text="6:30 PM"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="3"/>
                <Button
                    android:id="@+id/time7"
                    android:text="7:00 PM"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="3"/>
                <Button
                    android:id="@+id/time8"
                    android:text="7:30 PM"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="3"/>

                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="submitButton"
                    android:text="Submit"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:elevation="4dp"/>
            </GridLayout>
        </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>