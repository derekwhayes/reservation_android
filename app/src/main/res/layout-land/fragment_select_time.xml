<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SelectTimeFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/waiter"
        android:contentDescription="@string/waiter_icon_img_description"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/time_grid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/how_many_seats_text"
        android:labelFor="@id/editText"
        style="@style/WaiterText"
        android:textSize="16sp"
        android:layout_marginEnd="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/time_grid"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintEnd_toEndOf="parent" />


    <EditText
        android:id="@+id/editText"
        style="@style/WaiterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints="Num"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/time_grid"
        app:layout_constraintStart_toEndOf="@id/textView2" />

    <GridLayout
        android:id="@+id/time_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintBottom_toTopOf="@id/time_slot_scroller"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/fri_button"
            android:text="@string/fri_text"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/sat_button"
            android:text="@string/sat_text"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/sun_button"
            android:text="@string/sun_text"
            android:layout_columnWeight="1"/>
    </GridLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/time_slot_scroller"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/time_grid"
        app:layout_constraintBottom_toTopOf="@id/submit_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/list_time_slot" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:elevation="4dp"
        android:onClick="submitButton"
        android:text="@string/submit_text"
        app:layout_constraintTop_toBottomOf="@id/time_slot_scroller"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>